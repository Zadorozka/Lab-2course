#include <iostream>
#include <cstdlib>
#include <ctime>

using namespace std;

const int SIZE = 8;

void printMatrix(int matrix[SIZE][SIZE]) {
    for (int i = 0; i < SIZE; i++) {
        for (int j = 0; j < SIZE; j++) {
            cout << matrix[i][j] << " ";
        }
        cout << endl;
    }
}

void swapRows(int matrix[SIZE][SIZE], int row1, int row2) {
    for (int j = 0; j < SIZE; j++) {
        int temp = matrix[row1][j];
        matrix[row1][j] = matrix[row2][j];
        matrix[row2][j] = temp;
    }
}

int main() {
    int matrix[SIZE][SIZE];

    srand(time(0));

    for (int i = 0; i < SIZE; i++) {
        for (int j = 0; j < SIZE; j++) {
            matrix[i][j] = rand() % 100; 
        }
    }

    cout << "Початкова матриця:" << endl;
    printMatrix(matrix);

    // Замінюємо парні і непарні рядки
    for (int i = 0; i < SIZE; i += 2) {
        if (i + 1 < SIZE) {
            swapRows(matrix, i, i + 1);
        }
    }

    cout << "Матриця після заміни рядків:" << endl;
    printMatrix(matrix);

    return 0;
}
