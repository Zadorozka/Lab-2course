#include <iostream>
#include <cmath>

using namespace std;

int main() {
    const int size = 10;

    int arr[size];

    cout << "Введіть " << size << " цілих чисел:" << endl;
    for (int i = 0; i < size; i++) {
        cin >> arr[i];
    }

    int minAbsValue = abs(arr[0]);
    for (int i = 1; i < size; i++) {
        int absValue = abs(arr[i]);
        if (absValue < minAbsValue) {
            minAbsValue = absValue;
        }
    }

    cout << "Мінімальний за модулем елемент масиву: " << minAbsValue << endl;

    int firstNonZeroIndex = -1;
    for (int i = 0; i < size; i++) {
        if (arr[i] != 0) {
            firstNonZeroIndex = i;
            break;
        }
    }

    int sumOfMods = 0;
    if (firstNonZeroIndex != -1) {
        for (int i = firstNonZeroIndex + 1; i < size; i++) {
            sumOfMods += abs(arr[i]);
        }
    }

    cout << "Сума модулів елементів після першого ненульового елемента: " << sumOfMods << endl;

    for (int i = 0; i < size / 2; i++) {
        int temp = arr[i];
        arr[i] = arr[size - 1 - i];
        arr[size - 1 - i] = temp;
    }

    cout << "Змінений масив:" << endl;
    for (int i = 0; i < size; i++) {
        cout << arr[i] << " ";
    }

    return 0;
}
