#include <iostream>
#include <cmath>

double calculatePerimeter(double a, double b, double c) {
    return a + b + c;
}

double calculateArea(double a, double b, double c) {
    // Півпериметр трикутника
    double s = (a + b + c) / 2.0;

    double area = sqrt(s * (s - a) * (s - b) * (s - c));
    return area;
}

int main() {
    double a, b, c;

    std::cout << "Введіть довжини сторін трикутника (a, b, c): ";
    std::cin >> a >> b >> c;

    if (a + b > c && a + c > b && b + c > a) {
        // Обчислення та виведення результатів
        double perimeter = calculatePerimeter(a, b, c);
        double area = calculateArea(a, b, c);
        
        std::cout << "Периметр трикутника: " << perimeter << std::endl;
        std::cout << "Площа трикутника: " << area << std::endl;
    } else {
        std::cout << "Такий трикутник не існує за нерівністю трикутника." << std::endl;
    }

    return 0;
}
